{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components*": ["src/components*"],
      "@pages*": ["src/pages*"],
      "@hooks*": ["src/hooks*"],
      "@context*": ["src/context*"],
      "@config*": ["src/config*"],
      "@interfaces*": ["src/interfaces*"],
      "@data*": ["src/data*"],
      "@styles*": ["src/styles*"],
      "@lib*": ["src/lib*"],
      "@theme*": ["src/theme*"],
      "@utils*": ["src/utils*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "storage/hooks/useAuth"],
  "exclude": ["node_modules"]
}
